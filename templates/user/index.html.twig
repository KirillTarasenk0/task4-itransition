{% extends 'base.html.twig' %}

{% block title %}Hello UsersPageController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <div class="container">
            <div class="row align-items-center justify-content-end">
                <div class="col-auto">
                    User Name
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            </div>
        </div>
        <div>
            <button type="button" class="btn btn-primary">Block</button>
            <button type="button" class="btn btn-primary">UnBlock</button>
            <button type="button" class="btn btn-danger">Delete</button>
        </div>
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">e-Mail</th>
                    <th scope="col">Last login</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row"><input type="checkbox" id="checkbox1"></th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>01.12.2024</td>
                    <td>@mdo</td>
                </tr>
                <tr>
                    <th scope="row"><input type="checkbox" id="checkbox2"></th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>01.12.2024</td>
                    <td>@fat</td>
                </tr>
                <tr>
                    <th scope="row"><input type="checkbox" id="checkbox3"></th>
                    <td colspan="2">Larry the Bird</td>
                    <td>01.12.2024</td>
                    <td>@twitter</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
