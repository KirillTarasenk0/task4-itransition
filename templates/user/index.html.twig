{% extends 'base.html.twig' %}

{% block title %}Hello UsersPageController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <div class="container">
            <div class="row align-items-center justify-content-end">
                <div class="col-auto">
                    {{ user_name }}
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            </div>
        </div>
        <div>
            <button type="button" class="btn btn-primary">Block</button>
            <button type="button" class="btn btn-primary">UnBlock</button>
            <button type="button" class="btn btn-danger">Delete</button>
        </div>
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col"><input type="checkbox" id="checkbox" class="checkAll"></th>
                    <th scope="col">Name</th>
                    <th scope="col">e-Mail</th>
                    <th scope="col">Last login</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row"><input type="checkbox" id="checkbox1" class="checkbox-element"></th>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.dateLastLogin.format('Y-m-d H:i:s') }}</td>
                        <td>{{ user.status }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
